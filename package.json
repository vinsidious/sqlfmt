{
  "name": "holywell",
  "version": "1.3.0",
  "description": "Zero-config SQL formatter implementing Simon Holywell's SQL Style Guide (sqlstyle.guide). Zero dependencies.",
  "sideEffects": false,
  "type": "module",
  "main": "dist/index.cjs",
  "types": "dist/index.d.cts",
  "exports": {
    ".": {
      "types": {
        "import": "./dist/index.d.ts",
        "require": "./dist/index.d.cts"
      },
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "holywell": "dist/cli.cjs"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CODE_OF_CONDUCT.md",
    ".holywellrc.json.example"
  ],
  "scripts": {
    "build": "tsup",
    "test": "bun test",
    "check": "tsc --noEmit",
    "prepublishOnly": "bun run build",
    "release": "sh -c 'npm version \"$1\" && git push --follow-tags' --"
  },
  "keywords": [
    "sql",
    "sql-formatter",
    "formatter",
    "postgresql",
    "postgres",
    "database",
    "cli",
    "linter",
    "style",
    "sqlstyle",
    "pretty-print"
  ],
  "author": "Vince Coppola <vincecoppola@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vinsidious/holywell.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/vinsidious/holywell",
  "bugs": {
    "url": "https://github.com/vinsidious/holywell/issues"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@types/bun": "^1.3.8",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
