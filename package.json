{
  "name": "@vcoppola/sqlfmt",
  "version": "1.2.1",
  "description": "Zero-config SQL formatter with river alignment (sqlstyle.guide). Zero dependencies.",
  "sideEffects": false,
  "type": "module",
  "main": "dist/index.cjs",
  "types": "dist/index.d.cts",
  "exports": {
    ".": {
      "types": {
        "import": "./dist/index.d.ts",
        "require": "./dist/index.d.cts"
      },
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "sqlfmt": "dist/cli.cjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "bun test",
    "check": "tsc --noEmit",
    "prepublishOnly": "bun run build",
    "release": "sh -c 'npm version \"$1\" && git push --follow-tags' --"
  },
  "keywords": [
    "sql",
    "formatter",
    "linter",
    "style",
    "sqlstyle",
    "pretty-print"
  ],
  "author": "Vince Coppola <vincecoppola@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vinsidious/sqlfmt.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/vinsidious/sqlfmt",
  "bugs": {
    "url": "https://github.com/vinsidious/sqlfmt/issues"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@types/bun": "^1.3.8",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
